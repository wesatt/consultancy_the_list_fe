<h3><%= "#{@book.title}" %></h3>
<% if @book.subtitle %>
<h4><%= @book.subtitle %></h4>
<% end %>

<div class="bookDetails">
  <p>Author(s): <%= @book.author.join(', ') %></p>
  <p>Published On: <%= @book.published_date %></p>
  <p>Description: <%= @book.description %></p>
  <p>Number of Pages: <%= @book.page_count %></p>
  <p>Average Rating: <%= @book.average_rating %>/5</p>
</div>
